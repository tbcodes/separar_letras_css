/* Código CSS */

/*Esta es la hoja de estilos donde definimos las características de nuestro CSS*/


.letras {
	width: 1000px;
	padding: 20px;
	margin: 0 auto;
	font-family: 'Nunito', cursive;
	font-size: 1.2em;
	letter-spacing: 8px;
	

}

.segundo {
	word-spacing: 20px;

}

.tb {
	letter-spacing: -3px;
	padding-left: 5px;
	padding-right: 5px;
}


.tb:hover {
	letter-spacing: 15px;
	padding-left: 5px;
	padding-right: 5px;
}
